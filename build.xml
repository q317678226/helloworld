<?xml version="1.0" encoding="UTF-8"?>
<project  basedir="." name="TestJava" default="deploy">
	<path id="classpath">
		<fileset dir="${basedir}/lib">
			<include name="**/*.jar" />
		</fileset>
	</path>
	<description>这是一个demo项目</description>
	<target name="init" description="初始化目标">
		<mkdir dir="build/classes" />
		<mkdir dir="dist" />
	</target>
	<target name="compile" depends="init" description="编译目标">
		<javac srcdir="src" destdir="build/classes" >
			<classpath refid="classpath"/>
		</javac>
	</target>
	<target name="doc" depends="init" description="文档目标">
		<javadoc destdir="build/classes" sourcepath="src" />
	</target>
	<target name="deploy" depends="compile" description="部署目标">
		<jar destfile="dist/TestJava.jar" basedir="build/classes" />
	</target>
</project>  